 <!-- START PAGE CONTAINER -->
        <div class="page-container">
            
            <!-- START PAGE SIDEBAR -->
            <div class="page-sidebar">
                <!-- START X-NAVIGATION -->
                <ul class="x-navigation">
                    <li class="xn-logo">
                        <a href="index.html">ATLANT</a>
                        <a href="#" class="x-navigation-control"></a>
                    </li>
                    <li class="xn-profile">
                        <a href="#" class="profile-mini">
                        <%= image_tag current_user.image.url(:thumb) %>
                        </a>
                        <div class="profile">
                            <div class="profile-image">
                                <%= image_tag current_user.image.url(:thumb) %>
                            </div>
                            <div class="profile-data">
                                <div class="profile-data-name"><%= current_user.name %></div>
                                
                                <div class="profile-data-title">Super Admin</div>
                                
                            </div>
                            <div class="profile-controls">
                            <%= link_to edit_user_registration_path, class: "profile-control-left" do %>
                            <span class="fa fa-info"></span>
                            <% end %>
                                
                                <%= link_to super_admin_messages_index_path, class: "profile-control-right" do  %>
                            <span class="fa fa-envelope"></span>
                            <% end %>
                            </div>
                        </div>                                                                        
                    </li>
                    <li class="xn-title">Navigation</li>
                    <li>
                        <%= link_to super_admin_index_path do %>
                     <span class="fa fa-map-marker"></span>
                     <span class="xn-text">Dashboard</span>
                     <% end %>                       
                    </li>
                    <li>
                     <%= link_to super_admin_messages_index_path do %>
                     <span class="fa fa-map-marker"></span>
                     <span class="xn-text">Messages</span>
                     <% end %>
                    </li>
                     <li>
                     <%= link_to words_path do %>
                     <span class="fa fa-map-marker"></span>
                     <span class="xn-text">Words</span>
                     <% end %>
                    </li>
                     <li>
                        <%= link_to super_admin_notifications_index_path do %>
                     <span class="fa fa-map-marker"></span>
                     <span class="xn-text">Notifications</span>
                     <% end %>
                    </li>
                     <li>
                        <%= link_to applications_path do %>
                     <span class="fa fa-map-marker"></span>
                     <span class="xn-text">Applications</span>
                     <% end %>
                    </li>
                    <li  class="active">
                        <%= link_to super_admin_user_data_path do %>
                     <span class="fa fa-map-marker"></span>
                     <span class="xn-text">Users</span>
                     <% end %>
                    </li> 
                    <li>
                        <%= link_to super_admin_user_request_path do %>
                     <span class="fa fa-map-marker"></span>
                     <span class="xn-text">User Requests</span>
                     <% end %>
                    </li> 
                    
                </ul>
                <!-- END X-NAVIGATION -->
            </div>
            <!-- END PAGE SIDEBAR -->
            
            <!-- PAGE CONTENT -->
            <div class="page-content">
                
                <!-- START X-NAVIGATION VERTICAL -->
                <ul class="x-navigation x-navigation-horizontal x-navigation-panel">
                    <!-- TOGGLE NAVIGATION -->
                    <li class="xn-icon-button">
                        <a href="#" class="x-navigation-minimize"><span class="fa fa-dedent"></span></a>
                    </li>
                    <!-- END TOGGLE NAVIGATION -->
                    <!-- SEARCH -->
                    <li class="xn-search">
                        <form role="form">
                            <input type="text" name="search" placeholder="Search..."/>
                        </form>
                    </li>   
                    <!-- END SEARCH -->
                    <!-- SIGN OUT -->
                    <li class="xn-icon-button pull-right">
                        <a href="#" class="mb-control" data-box="#mb-signout"><span class="fa fa-sign-out"></span></a>
                                                
                    </li> 
                    <!-- END SIGN OUT -->
                    <!-- MESSAGES -->
                    <li class="xn-icon-button pull-right">
                        <a href="#"><span class="fa fa-comments"></span></a>
                        <div class="informer informer-danger"><%= @noti_count %></div>
                        <div class="panel panel-primary animated zoomIn xn-drop-left xn-panel-dragging">
                            <div class="panel-heading">
                                <h3 class="panel-title"><span class="fa fa-comments"></span> Notifications</h3>                                
                                <div class="pull-right">
                                    <span class="label label-danger"><%= @noti_count %> new</span>
                                </div>
                            </div>
                            <% @noti.each do |n| %>
                            <div class="panel-body list-group list-group-contacts scroll" style="height: 200px;">
                                <a href="#" class="list-group-item">
                                    <span class="contacts-title"><%=n.content %></span>
                                </a>
                                
                            </div> 
                            <% end %>    
                            <div class="panel-footer text-center">
                                <%= link_to "Show all Notifications", super_admin_notifications_index_path %>
                            </div>                            
                        </div>                        
                    </li>
                    <!-- END MESSAGES -->
                    <!-- TASKS -->
                    <li class="xn-icon-button pull-right">
                        <a href="#"><span class="fa fa-tasks"></span></a>
                        <div class="informer informer-warning"><%= @count %></div>
                        <div class="panel panel-primary animated zoomIn xn-drop-left xn-panel-dragging">
                            <div class="panel-heading">
                                <h3 class="panel-title"><span class="fa fa-tasks"></span> User Requests</h3>                                
                                <div class="pull-right">
                                    <span class="label label-warning"><%= @count %> Non active</span>
                                </div>
                            </div>
                            <div class="panel-body list-group scroll" style="height: 200px;">    <% @requests.each do |r| %>
                            <%= link_to super_admin_user_request_path, class: "list-group-item" do %>           
                                
                                    <h3><strong><%= r.name %> </strong> <small>[ <%= r.user_type %> ]</small> </h3>
                                <% end %>
                                <% end %>
                                                  
                            </div>     
                            <div class="panel-footer text-center">
                            <%= link_to "Show all requests", super_admin_user_request_path %>
                            </div>                            
                        </div>                        
                    </li>
                    <!-- END TASKS -->
                </ul>
                <!-- END X-NAVIGATION VERTICAL -->                     

                <!-- START BREADCRUMB -->
                <ul class="breadcrumb">
                    <li><%= link_to "Home", super_admin_index_path %></li>                    
                    <li class="active">Update User Profile</li>
                </ul>
                <!-- END BREADCRUMB -->  
                <div class="page-content-wrap">
                
                    <div class="row">
                        <div class="col-md-12">
                            
                            
                            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title"><strong>UPDATE USER PROFILE</strong></h3>
                                    <ul class="panel-controls">
                                        <li><a href="#" class="panel-remove"><span class="fa fa-times"></span></a></li>
                                    </ul>
                                </div>
                               
                                <div class="panel-body">
                                <div class="form-group col-md-offset-2">
                                        <label class="col-md-1 col-xs-12 control-label ">NAME</label>
                                        <div class="col-md-6 col-xs-12">                                            
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                <%= f.input :name,label: false, required: true,input_html: {class: "form-control"},wrapper: false%>
                                            </div>                                            
                                        </div>
                                    </div>
                                    
                                    <br><br> 
                                     <div class="form-group col-md-offset-2">
                                        <label class="col-md-1 col-xs-12 control-label ">EMAIL</label>
                                        <div class="col-md-6 col-xs-12">                                            
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                <%= f.input :email,label: false, required: true,input_html: {class: "form-control"},wrapper: false%>
                                                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
                                            </div>                                            
                                        </div>
                                    </div>
                                    <br><br>
                                     <div class="form-group col-md-offset-2">
                                        <label class="col-md-1 col-xs-12 control-label ">PASSWORD</label>
                                        <div class="col-md-6 col-xs-12">                                            
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                <%= f.input :password, autocomplete: "off", required: false,label: false,input_html: {class: "form-control"},wrapper: false%>
                                            </div>                                            
                                        </div>
                                    </div>
                                    <br><br>
                                    <div class="form-group col-md-offset-2">
                                        <label class="col-md-1 col-xs-12 control-label ">CONFIRM PASSWORD</label>
                                        <div class="col-md-6 col-xs-12">                                            
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                <%= f.input :password_confirmation, required: false,label: false,input_html: {class: "form-control"},wrapper: false,hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)%>
                                            </div>                                            
                                        </div>
                                    </div>
                                    <br><br>
                                    <div class="form-group col-md-offset-2">
                                        <label class="col-md-1 col-xs-12 control-label ">CURRENT PASSWORD</label>
                                        <div class="col-md-6 col-xs-12">                                            
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                <%= f.input :current_password,label: false, required: true,input_html: {class: "form-control"},wrapper: false%>
                                            </div>                                            
                                        </div>
                                    </div>
                                    <br><br>
                                        <div class="form-group col-md-offset-2">
                                        <label class="col-md-1 col-xs-12 control-label ">IMAGE</label>
                                        <div class="col-md-6 col-xs-12">                                            
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                <%= f.input :image,label: false, required: true,input_html: {class: "form-control"},wrapper: false%>
                                            </div>                                            
                                        </div>
                                    </div>
                                    
                                    
                                </div>
                                <div class="panel-footer">
                                <%= link_to "Deactivate my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,class: "btn btn-default" %>
                                                                      
                                    <button class="btn btn-primary pull-right">Update</button>
                                </div>
                            </div>
                            <% end %>
                            
                        </div>
                    </div>                    
                    
                </div>                  
             </div>

                   
                   
               

        <!-- MESSAGE BOX-->
        <div class="message-box animated fadeIn" data-sound="alert" id="mb-signout">
            <div class="mb-container">
                <div class="mb-middle">
                    <div class="mb-title"><span class="fa fa-sign-out"></span> Log <strong>Out</strong> ?</div>
                    <div class="mb-content">
                        <p>Are you sure you want to log out?</p>                    
                        <p>Press No if youwant to continue work. Press Yes to logout current user.</p>
                    </div>
                    <div class="mb-footer">
                        <div class="pull-right">
                            <%=link_to "Yes", destroy_user_session_path, method: :delete, class: "btn btn-success btn-lg" %>
                            <button class="btn btn-default btn-lg mb-control-close">No</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>









































